<!DOCTYPE html>
<html>
<head>
  <title>Captain - Effortless deployment tracking</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= body_classes %>">

	<!-- SIGNIN/SIGNOUT -->
	<%= render :partial => "partials/navbar" %>

	<!-- NOTICE/ALERT -->
	<div class="application_alerts">
		<% if notice %>
			<div class="alert alert-success">
				<div class="container">
					<%= notice %>
				</div>
			</div>
		<% end %>
		<% if alert %>
			<div class="alert alert-danger">
				<div class="container">
					<%= alert %>
				</div>
			</div>
		<% end %>
	</div>



	<!-- Title of the page section -->
	<% if (yield :title).present? %>
		<section class="section-primary section-size-1">
			<div class="container">
				<div class="row">
					<div class="col-sm-7">
						<%= yield :title %>
					</div>
					<!-- <div class="col-sm-5 text-right">
						<br><br>
						<div class="btn-group">
							<a class="btn btn-white">
								Edit information
							</a>
							<a class="btn btn-danger">
								Delete application
							</a>
						</div>
					</div> -->
				</div>
			</div>
		</section>
	<% end %>

	<br>

	<% if controller_is?([:"devise/sessions", :"devise/registrations"]) %>
		<h1 class="typo-brand-strong brand-logo">Captain</h1>
	<% end %>

	<!-- THE CONTENT -->
	<div class="container">
		<%= yield %>
	</div>

<!-- 	<br><br>
	<div class="container-fluid footer">
		<div class="container">
			Made with <span class="glyphicon glyphicon-heart"></span></b>
		</div>
	</div>
 -->
</body>
</html>
