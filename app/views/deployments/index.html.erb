<%= title do %>
	Listing deployments <% if @deployable_application.present? %> For <%= @deployable_application.name %><% end %>
<% end %>

<table class="table">
	<thead>
		<tr>
			<th>Repo owner</th>
			<th>Repo name</th>
			<th>Repo address</th>
			<th>Public token</th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td><%= @deployable_application.repo_owner %></td>
			<td><%= @deployable_application.repo_name %></td>
			<td><%= @deployable_application.repo %></td>
			<td><%= @deployable_application.public_token %></td>
		</tr>
	</tbody>
</table>

<% if @deployments.any? %>
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Last deployment</h3>
		</div>

		<div class="list-group">
			<% @deployments.each do |deployment| %>
				<a href="<%= deployable_application_deployment_url(@deployable_application, deployment) %>" class="list-group-item">
					<span class="badge"><%= deployment.pull_requests.count %> pull requests</span>
					<b>Deploy #<%= deployment.id %></b> at <%= "#{deployment.created_at}" %>
				</a>
			<% end %>
		</div>
	</div>
<% end %>
