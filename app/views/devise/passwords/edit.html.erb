<%= title "Change your password" %>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form form-horizontal"}) do |f| %>
	
	<%= display_errors!(resource) %>
	
	<%= f.hidden_field :reset_password_token %>

	<%= f.input :password, :label => false, :placeholder => "Your password" %>

	<%= f.input :password_confirmation, :label => false, :placeholder => "Repeat password" %>

	<%= btn_container do %>
		<%= f.button :button, 'Change my password'.html_safe, :class => "btn btn-primary " %>
	<% end %>

<% end %>

<%= render "devise/shared/links" %>