<%= title "Create an account for Deployd" %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form form-horizontal"}) do |f| %>
<%= display_errors!(resource) %>
	<% if resource.errors.any? %>
		<div class="alert alert-danger">
			<p class="text">
				<%= pluralize(resource.errors.count, "error") %> prohibited this deployable_application from being saved:
			</p>

			<ul>
			<% resource.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<%= f.input :email, :label => false, :placeholder => "Your email address" %>

	<% if @user.password_required? # Probably when logging with social (twitter)Â %>

		<%= f.input :password, :label => false, :placeholder => "Your password" %>

		<%= f.input :password_confirmation, :label => false, :placeholder => "Repeat password" %>

	<% end %>

	<%= btn_container do %>
		<%= f.button :button, 'Sign up'.html_safe, :class => "btn btn-primary " %>
	<% end %>

<% end %>

<%= render "devise/shared/links" %>