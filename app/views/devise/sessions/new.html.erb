<%= title "Sign in" %>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form form-horizontal"}) do |f| %>

	<%= f.input :email, :label => false, :placeholder => "Your email address" %>

	<%= f.input :password, :label => false, :placeholder => "Your password" %>

	<% if devise_mapping.rememberable? -%>
		<%= f.hidden_field :remember_me, :as => :boolean, :input_html => {:checked => true} %>
	<% end -%>

	<%= btn_container do %>
		<%= f.button :button, 'Sign in'.html_safe, :class => "btn btn-primary" %>
	<% end %>

<% end %>

<%= render "devise/shared/links" %>
