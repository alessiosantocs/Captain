<% content_for :title do %>
	<%= title @deployable_application.name, :wrapper_class => "" %>
	<%= sub_title "Application's detail" %>
<% end %>

<% generate_header_cover "https://photos-6.dropbox.com/t/0/AABrfHS74mfXJYNvY4Wp4GfzyNseCVpZIPeB4p8KUZAFsQ/12/137066628/png/1024x768/3/1407081600/0/2/Screen%20Shot%202014-08-03%20at%2016.15.13.png/3L_ijlZsFEkupNbyWQdgHLdpiWBUDFQPNNnEg7433XY" %>

<table class="table">
	<thead>
		<tr>
			<th>Repo owner</th>
			<th>Repo name</th>
			<th>Repo address</th>
			<th>Public token</th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td><%= @deployable_application.repo_owner %></td>
			<td><%= @deployable_application.repo_name %></td>
			<td><%= @deployable_application.repo %></td>
			<td><%= @deployable_application.public_token %></td>
		</tr>
	</tbody>
</table>

<% if @deployable_application.deployments.any? and latest_deployment = @deployable_application.deployments.last %>
	<!-- The latest deploy you made -->
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Last deployment</h3>
		</div>

		<div class="list-group">
			<a href="<%= deployable_application_deployment_url(@deployable_application, latest_deployment, :public_token => params[:public_token]) %>" class="list-group-item">
				<span class="badge"><%= latest_deployment.pull_requests.count %> pull requests</span>
				<b><%= latest_deployment.title %></b> at <%= "#{latest_deployment.created_at}" %>
			</a>
		</div>
	</div>
	<%= link_to "See all deployments", deployable_application_deployments_url(@deployable_application, :public_token => params[:public_token]) %>
<% elsif @deployable_application.installed  %>
	<div class="alert alert-warning">
		You have no deployments yet. Go <strong><i>cap production deploy</i></strong><%=  %> your application...
	</div>
<% end %>


<!-- Display a modal if the application was not installed -->
<% unless @deployable_application.installed %>
	<%= render :partial => "activation_modal" %>
<% end %>
